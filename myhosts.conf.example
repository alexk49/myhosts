# store this in ~/.local/share/myhosts/myhosts.conf if running as user
# or in /var/lib/myhosts/myhosts.conf is running as system user

# this can be used to override the timer variables

# Enable weekday-only work mode
WORK_DAYS=1            # 1 = Monâ€“Fri only, 0 = every day

# Work hours (24h format)
WORK_START=09:00
WORK_END=17:00

# updateHostFiles extensions and flags

UPDATE_EXTENSIONS="fakenews gambling porn"
UPDATE_FLAGS="--nogendata --auto"

WORK_UPDATE_EXTENSIONS="fakenews gambling porn social"
WORK_UPDATE_FLAGS=""

# restart network to flush dns cache when updating hosts file
RESTART_NETWORK=false
